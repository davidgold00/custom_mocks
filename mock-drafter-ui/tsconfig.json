{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],

    "types": ["node", "@cloudflare/workers-types/latest"],

    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] }
  },
  "include": ["src", "functions", "vite-env.d.ts"]
}
